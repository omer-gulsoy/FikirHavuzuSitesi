@using Proje.EntityLayer.Concrate;
@{
	Layout = "~/Views/Shared/_NewDefaultLayout.cshtml";
}
<html lang="en">
<head>

	<title>Fikir/Öneri Ekle</title>
</head>
<body>
	<!-- Navigation-->
	<a class="menu-toggle rounded" href="#"><i class="fas fa-bars"></i></a>
	<nav id="sidebar-wrapper">
		<ul class="sidebar-nav">
			<li class="sidebar-brand"><a href="~/Default/Index"><h3><b>Fikir Havuzu</b></h3></a></li>
			<li class="sidebar-nav-item"><a href="~/Default/Index">Ana Sayfa</a></li>
			<li class="sidebar-nav-item"><a href="~/User/Index">Kullanıcı Paneli</a></li>
			<li class="sidebar-nav-item"><a href="~/Idea/Index"><h4><b>Fikir/Öneri İşlemleri</b></h4></a></li>
			<li class="sidebar-nav-item"><a href="~/MyProfile/Index">Profilim</a></li>
			<li class="sidebar-nav-item"><a href="~/Default/Index">Çıkış Yap</a></li>
		</ul>
	</nav>

	<div class="masthead d-flex align-items-center">
		<div class="container">
			<form asp-action="Index" method="post">
				<div class="row justify-content-center">
					<div class="col-md-6">
						<div class="card mb-4 mx-4" style="border-style: solid;border-color:black; border-width: 25px;border-radius:25px">
							<div class="card-body p-4">
								<h2 class="mb-3" id="baslik"><b>Fikir/Öneri Girişi</b></h2>
								<div class="input-group mb-3">
									<span class="input-group-text">
										<svg class="icon">
											<use xlink:href="~/template/vendors/Acoreui/icons/svg/free.svg#cil-user"></use>

										</svg>
									</span>
									<input name="Baslik" class="form-control" type="text" placeholder="Başlığınız :">
								</div>@* başlık *@

								<div class="mb-2">
									<b>
										1) Ürün <br />
										2) Hizmet<br />
										3) Süreç
									</b>
								</div>

								<div class="input-group mb-3">
									<span class="input-group-text">
										<svg class="icon">
											<use xlink:href="~/template/vendors/Acoreui/icons/svg/free.svg#cil-user"></use>

										</svg>
									</span>
									<input name="CategoryId" class="form-control" type="number" placeholder="Kategori Numarası :">
								</div>
								@* kategori *@
								<div class="input-group mb-3">
									<span class="input-group-text">
										<svg class="icon">
											<use xlink:href="~/template/vendors/Acoreui/icons/svg/free.svg#cil-user"></use>

										</svg>
									</span>
									<input name="Fayda" class="form-control" type="text" placeholder="Sağlayacağını Düşündüğünüz Fayda :">
								</div>@* fayda *@
								<div class="input-group mb-3">
									<span class="input-group-text">
										<svg class="icon">
											<use xlink:href="~/template/vendors/Acoreui/icons/svg/free.svg#cil-user"></use>

										</svg>
									</span>
									<input name="Icerik" class="form-control" type="text" style="height:250px" placeholder="İçeriğiniz :">
								</div>@* içerik *@


								<button class="btn btn-primary btn-lg btn-block" type="submit" id="send"><b>Fikri/Öneriyi Paylaş</b></button>
								<a style="background-color: #f44336;  color: white;  padding: 14px 25px;  text-align: center;  text-decoration: none;  display: inline-block;     border-radius: 10px 10px 10px 10px;height:48px" href="~/Idea/Doc" target="_blank"><b>Dosya Ekle</b></a>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>

</body>
</html>



